@model List<CSharpASPandADO.Models.Employee>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Emp No</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmpNo</td>
                <td>@emp.EmpName</td>
                <td>@emp.EmpDesignation</td>
                <td>@emp.EmpSalary</td>
                <td>
                    <a asp-action="UpdateEmployee" asp-route-id="@emp.EmpNo" class="btn btn-sm btn-warning">Update</a>
                    <a asp-action="Delete" asp-route-id="@emp.EmpNo" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
