@model CSharpASPandADO.Models.Employee
@{
    ViewData["Title"] = "Update Employee";
}
<h2>Update Employee</h2>

<form asp-action="UpdateEmployee" method="post">
    <input type="hidden" asp-for="EmpNo" />

    <div class="form-group">
        <label asp-for="EmpName"></label>
        <input asp-for="EmpName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmpDesignation"></label>
        <input asp-for="EmpDesignation" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmpSalary"></label>
        <input asp-for="EmpSalary" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
